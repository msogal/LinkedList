/*
Class Node. Stores a student value, and a pointer to the next node in the linked list
 */
#ifndef NODE_H
#define NODE_H
#include <iostream>
#include "Student.h"

using namespace std;
class Node{
 public:
  //constructor
  Node();
  //desctructor
  ~Node();
  //returns the Student that the node stores
  Student* getValue();
  //us this to set the Student
  void setValue(Student* s);
  //returns the next node in 
  Node* getNext();
  void setNext(Node* n);

 private:
  
  Student* value;
  Node* next;

};
#endif
